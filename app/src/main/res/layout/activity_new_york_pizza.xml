<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFragmentHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewYorkPizza">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newyorkstyle_buildyourown" />

    <Spinner
        android:id="@+id/spinner_pizzaSize"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="1dp"
        android:entries="@array/pizzaSizes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_newYorkPizzaType" />

    <Spinner
        android:id="@+id/spinner_newYorkPizzaType"
        android:entries="@array/pizzaTypes"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="1dp"
        android:scrollbarSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup_toppings"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/button_addtoCart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner_pizzaSize"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.chip.Chip
            android:id="@+id/toppingsChip_BBQChicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/toppings_BBQChicken" />

        <com.google.android.material.chip.Chip
            android:id="@+id/toppingsChip_Provolone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/toppings_Provolone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/toppingsChip_Cheddar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/toppings_Cheddar" />

        <com.google.android.material.chip.Chip
            android:id="@+id/toppingsChip_Beef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/toppings_Beef" />

        <com.google.android.material.chip.Chip
            android:id="@+id/toppingsChip_Ham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/toppings_Ham" />

        <com.google.android.material.chip.Chip
            android:id="@+id/toppingsChip_Sausage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/toppings_Sausage" />

        <com.google.android.material.chip.Chip
            android:id="@+id/toppingsChip_Pepperoni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/toppings_Pepperoni" />

        <com.google.android.material.chip.Chip
            android:id="@+id/toppingsChip_GreenPeppers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/toppings_GreenPeppers" />

        <com.google.android.material.chip.Chip
            android:id="@+id/toppingsChip_Onions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/toppings_Onions" />

        <com.google.android.material.chip.Chip
            android:id="@+id/toppingsChip_Mushrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/toppings_Mushrooms" />
    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/button_addtoCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="85dp"
        android:text="Add to Cart!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textview_pizza_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="57dp"
        android:editable="false"
        android:text="@string/default_price"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/pizzaPriceText"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup_toppings" />

    <TextView
        android:id="@+id/pizzaPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/pizza_price"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textview_pizza_price"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:text="@string/temp_crust_name"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_newYorkPizzaType"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginEnd="147dp"
        android:text="@string/crust_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/spinner_newYorkPizzaType" />
</androidx.constraintlayout.widget.ConstraintLayout>