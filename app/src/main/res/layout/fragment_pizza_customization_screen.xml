<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_pizza_customization_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PizzaCustomizationScreen">

    <!--  TextView of What type of selected Pizza  -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_york_deluxe"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="34dp" />

    <!--  TextView of the Crust  -->


    <!--  Spinner for Pizza Size  -->

    <!--  Add to Cart Button  -->
    <TextView
        android:id="@+id/crustTextView"
        android:layout_width="61dp"
        android:layout_height="27dp"
        android:layout_marginStart="260dp"
        android:text="@string/temp_crust_name"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="140dp" />

    <Spinner
        android:id="@+id/pizza_size_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="140dp" />

    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_width="138dp"
        android:layout_height="42dp"
        android:text="Add to Cart"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pizza_crust_spinner"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="640dp" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="179dp"
        android:layout_height="233dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="260dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="THIS IS A CHIP" />
    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>