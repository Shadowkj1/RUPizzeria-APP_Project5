<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"> <!-- Added a light background color -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"> <!-- Added padding inside the card -->

            <ImageView
                android:id="@+id/imageview_pizzaImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="#E0E0E0"
                android:padding="4dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/newyorkstyle_meatzza" />

            <TextView
                android:id="@+id/textview_pizzaName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/new_york_deluxe"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/pizza_card_price_text"
                app:layout_constraintStart_toEndOf="@+id/imageview_pizzaImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pizza_card_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textColor="#666666"
                app:layout_constraintEnd_toStartOf="@+id/pizza_card_price_value"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pizza_card_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/default_price"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/crustText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="Crust:"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imageview_pizzaImage"
                app:layout_constraintTop_toBottomOf="@+id/textview_pizzaName" />

            <TextView
                android:id="@+id/textview_PizzaCrust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/crust_Thin"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/crustText"
                app:layout_constraintTop_toTopOf="@+id/crustText" />

            <TextView
                android:id="@+id/crustText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="Crust:"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imageview_pizzaImage"
                app:layout_constraintTop_toBottomOf="@+id/textview_pizzaName" />

            <TextView
                android:id="@+id/pizzaSize_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:text="@string/pizzaSize_text"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imageview_pizzaImage"
                app:layout_constraintTop_toBottomOf="@+id/crustText" />

            <TextView
                android:id="@+id/pizzaSize_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/pizzaSize_small"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/pizzaSize_text"
                app:layout_constraintStart_toEndOf="@+id/pizzaSize_text" />

            <TextView
                android:id="@+id/toppings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="32dp"
                android:text="Toppings:"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imageview_pizzaImage"
                app:layout_constraintTop_toBottomOf="@+id/crustText" />

            <TextView
                android:id="@+id/textview_PizzaToppings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/toppings_BBQChicken"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/toppings_text"
                app:layout_constraintTop_toTopOf="@+id/toppings_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>