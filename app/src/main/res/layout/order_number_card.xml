<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/orderhistory_order_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_number"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/orderhistory_ordernumber_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/default_order_value"
                android:textColor="#333333"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/orderhistory_order_number_text"
                app:layout_constraintTop_toTopOf="@id/orderhistory_order_number_text" />

            <TextView
                android:id="@+id/orderhistory_orderTotal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/ordertotal_text"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/orderhistory_order_number_text" />

            <TextView
                android:id="@+id/orderhistory_orderTotal_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/default_price"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/orderhistory_orderTotal_text"
                app:layout_constraintTop_toTopOf="@id/orderhistory_orderTotal_text" />

            <TextView
                android:id="@+id/helperText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/helper_text_hint"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textAlignment="textEnd"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/orderhistory_ordernumber_value"
                app:layout_constraintStart_toEndOf="@id/orderhistory_ordernumber_value" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>